
<div class="panel panel-default">
  <div class="panel-footer"> Organization Detail </div>
  <div class="panel-body">
    <div class='col-xs-12'>
        <img src="http://<%= @data.logo%>" height=200>
        <br><br>
        <div class='row'>
          <div class='col-xs-2'> <%= translate("field.organsisasi.name") %> </div>
          <div class='col-xs-1'> : </div>
          <div class='col-xs-9'> <%= @data.name %> </div>
        </div>
        <div class='row'>
          <div class='col-xs-2'> <%= translate("field.organisasi.email") %> </div>
          <div class='col-xs-1'> : </div>
          <div class='col-xs-9'> <%= @data.email %> </div>
        </div>
        <div class='row'>
          <div class='col-xs-2'> <%= translate("field.organsisasi.phone") %> </div>
          <div class='col-xs-1'> : </div>
          <div class='col-xs-9'> <%= @data.phone %> </div>
        </div>
        <div class='row'>
          <div class='col-xs-2'> <%= translate("field.organisasi.website") %> </div>
          <div class='col-xs-1'> : </div>
          <div class='col-xs-9'> <%= @data.website %> </div>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-footer"> User Organization </div>
  <div class="panel-body">
    <div class='col-xs-12'>
      <div class='col-xs-6'>
        <%if (JSON.parse(current_user.role.permission).include? '*') || (JSON.parse(current_user.role.permission).include? 'user#add') %>
          <button class='btn btn-default btn-add'><i class='fa fa-plus'></i></button>
        <%end%>
      </div>
      <div class='pull-right col-xs-6'>
        <div class="form-group col-xs-4">
          <select class="form-control" id='field'>
            <option value=''><%=translate("placeholder.empty")%></option>
            <option value='full_name'><%=translate('field.user.full_name')%></option>
            <option value='email'><%=translate('field.user.email')%></option>
          </select>
        </div>
        <div class="form-group col-xs-2">
          <select class="form-control" id='operator'>
            <option value=''><%=translate('placeholder.empty')%></option>
            <option value='ILIKE'><%=translate('placeholder.equal')%></option>
            <option value='NOT ILIKE'><%=translate('placeholder.not_equal')%></option>
          </select>
        </div>
        <div class="form-group col-xs-6">
          <input placeholder='<%= translate("placeholder.search") %>' type="search" class="form-control" id="search">
        </div>
      </div>
    </div>
    <table class="table table-strip col-xs-12">
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
      </thead>
    </table>
  </div>
</div>

<% content_for :script do%>
    <script>
      $(document).ready(()=>{
        let dt = $('.table')

        dt.on('click','.btn-detail',function(){
          let url = "<%= route_for(:userDetail) %>"
          window.open(`${url}/${$(this).attr('data-id')}`)
        })

        dt.on('click','.btn-delete',function(){
          let url = "<%= route_for(:userDelete) %>"
           $.ajax({
              url: `${url}/${$(this).attr('data-id')}`,
              type: 'DELETE',
              success: dt.DataTable().draw(),
          });
          
        })
        
        $('.btn-add').on('click',function(){
          let url = "<%= route_for(:userAdd) %>"
          window.open(`${url}`)
        })

        dt.on('click','.btn-update',function(){
          let url = "<%= route_for(:userUpdate) %>"
          window.open(`${url}/${$(this).attr('data-id')}`)
        })

        $('#search').keypress(function(e){
          if(e.which == 13){
            dt.DataTable().draw()
          }
        })
        dt.DataTable( {
            "processing": true,
            "serverSide": true,
            searching:false,
            "columns": [
              { "name": "full_name",   "data": 'full_name' },
              { "name": "email",  "data": 'email' },
              { "name": "action",  "data": 'action',orderable:false },
            ],
            "columnDefs": [
              { "name": "full_name",   "data": 'full_name' },
              { "name": "email",  "data": 'email' },
              { "name": "action",  "data": 'action',orderable:false },
            ],
            "ajax": {
              url : "<%= @dataTableUrl %>",
              data :(d)=> {
                d.q = $('#search').val()
                d.organization_id = "<%= params["id"]%>"
                d.organizationDetail = true
                d.field = $('#field').val()
                d.operator = $('#operator').val()
              }
            }
        });
      })
    </script>
  <% end %>
