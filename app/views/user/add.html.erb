<div class="panel panel-default">
  <div class="panel-footer">
    <%=t("page.user.add")%>
  </div>
  <div class="panel-body">
      <%= form_tag(route_for(:userAddProcess), method: "POST",enctype:'multipart/form-data') do %>
      <input type="hidden" readonly name='id' value="<%= @user.id %>">
        <div class="form-group">
          <label for="email"><%= t("field.user.email") %></label>
          <input type="email" name='email' value="<%= @user.email %>"  class="form-control" id="email" aria-describedby="emailHelp" placeholder="<%= t("field.user.placeholder.email") %>">
            <%if flash[:error] && flash[:error]["email"] %>
              <% flash[:error]["email"].each do |flashDetail|%>
                <li class="form-text text-muted"><small id="emailHelp"><%= flashDetail %></small></li>
              <%end%>
            <%end%>
        </div>
        <div class="form-group">
          <label for="first_name"><%= t("field.user.first_name") %></label>
          <input type="text" name='first_name' value="<%= @user.first_name %>" class="form-control" id="first_name" aria-describedby="first_nameHelp" placeholder="<%= t("field.user.placeholder.first_name") %>">
          <%if flash[:error] && flash[:error]["first_name"]%>
            <% flash[:error]["first_name"].each do |flashDetail|%>
              <li class="form-text text-muted"><small id="first_nameHelp"><%= flashDetail %></small></li>
            <%end%>
          <%end%>
        </div>
        <div class="form-group">
          <label for="last_name"><%= t("field.user.last_name") %></label>
          <input type="text" name='last_name' value="<%= @user.last_name %>"  class="form-control" id="last_name" aria-describedby="last_nameHelp" placeholder="<%= t("field.user.placeholder.last_name") %>">
          <%if flash[:error] && flash[:error]["last_name"]%>
            <% flash[:error]["last_name"].each do |flashDetail|%>
              <li class="form-text text-muted"><small id="last_nameHelp"><%= flashDetail %></small></li>
            <%end%>
          <%end%>
        </div>
        <div class="form-group">
          <label for="phone"><%= t("field.user.phone") %></label>
          <input type="number" name='phone' value="<%= @user.phone %>"  class="form-control" id="phone" aria-describedby="phoneHelp" placeholder="<%= t("field.user.placeholder.phone") %>">
           <%if flash[:error] && flash[:error]["phone"]%>
            <% flash[:error]["phone"].each do |flashDetail|%>
              <li class="form-text text-muted"><small id="phoneHelp"><%= flashDetail %></small></li>
            <%end%>
          <%end%>
        </div>
        <div class="form-group">
          <label for="password"><%= t("field.user.password") %></label>
          <input type="password" name='password' value="<%= @user.encrypted_password %>"  class="form-control" id="password" aria-describedby="passwordHelp" placeholder="<%= t("field.user.placeholder.password") %>">
          <%if flash[:error] && flash[:error]["password"]%>
            <% flash[:error]["password"].each do |flashDetail|%>
              <li class="form-text text-muted"><small id="passwordHelp"><%= flashDetail %></small></li>
            <%end%>
          <%end%>
        </div>
        <div class="form-group">
          <label for="role_id"><%= t("field.user.role_id") %></label>
          <select class='form-control' name='role_id'>
            <option value=""><%= t('field.user.placeholder.role_id') %></option>
            <% @roles.each do |role| %>
              <option "<%= role.id == @user.role_id ? 'selected' : ''%>" value="<%= role.id %>"><%= role.name %></option>
            <% end %>
          </select>
           <%if flash[:error] && flash[:error]["role_id"]%>
            <% flash[:error]["role_id"].each do |flashDetail|%>
              <li class="form-text text-muted"><small id="role_idHelp"><%= flashDetail %></small></li>
            <%end%>
          <%end%>
        </div>
        <div class="form-group">
          <label for="avatar"><%= t("field.user.avatar") %></label>
          <input name='avatar' type="file" class="form-control" id="avatar" aria-describedby="avatarHelp">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary col-xs-12">Submit</button>
        </div>
      <% end %>
  </div>
</div>